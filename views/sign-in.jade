extends layout
block content
    .row.man.pan(ng-controller='SigninController')
        .col-md-12
            .col-md-4.col-md-offset-4.pan
                .col-md-12
                    .jumbotron.bor.pam(style="background-color:#fff;border-radius:;margin-top:15%")
                        .container
                            fieldset
                                legend
                                    .row
                                        .col-md-12
                                            .col-md-6.col-md-offset-3
                                                h6.text-dark-gray2.light-weight
                                                    img(src="stylesheets/Icons/SVG/clocks.svg" alt="" width='30px')
                                                    | &nbsp;&nbsp;Sign in
                                form.signup-form(name="userForm")
                                    .form-group.has-feedback
                                        input.form-control.bor(name='email', type='email', placeholder='Email Address', ng-required="true", ng-model="user.email")
                                        span.form-control-feedback(ng-class="userForm.email.$valid ? 'icon-ok-circled  text-success' : 'icon-left-circled text-muted' ")
                                    .form-group.has-feedback
                                        input.form-control.bor(name= 'password', type='password', placeholder='Password', ng-required="true", ng-minlength='6', ng-model="user.password")
                                        span.form-control-feedback(ng-class="userForm.password.$valid ? 'icon-ok-circled  text-success' : 'icon-left-circled text-muted' ")
                                        //a(href='#', ng-click="forgotPassword($event)").pull-right.text-light-gray
                                            span.font12 Forgot Password?
                                    //.form-group

                                    .row
                                        .col-md-4
                                            button.btn.btn-primary(ng-click="logInUser(userForm)") Submit
                                        .col-md-8
                                            i.icon-spin5.animate-spin.text-muted.pull-right.ng-cloak(ng-show='alertInfo.spinner')
                                            .alert.alert-danger.text-center.pas.font14.ng-cloak(ng-show='alertInfo.alert') {{alertInfo.alertMsg}}


                                .col-md-12.pan.animate.slide-down.ng-cloak.mtl(ng-show="showForgotPassword")
                                    form.signup-form(name="forgotPasswordForm")
                                        .col.md-12.pan
                                            .form-group.has-feedback
                                                input.input-sm.form-control.bor(name='email', type='email', placeholder='Enter your email for password reset', ng-required="true", ng-model="forgotEmail")
                                                span.form-control-feedback(ng-class="userForm.email.$valid ? 'icon-ok-circled  text-success' : 'icon-left-circled text-muted' ")
                                        .col-md-4.pan
                                            button.btn.btn-xs.btn-primary(ng-click="sendResetEmail(forgotPasswordForm)") Submit
